                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </VBox>
                <Hyperlink onAction="#openAuthorPage" text="About the Author" />
            </children>
        </VBox>
    </children>
